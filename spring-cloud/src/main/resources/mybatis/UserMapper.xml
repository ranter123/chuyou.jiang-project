<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="chuyou.jiang.hystrix.mapper.UserMapper">
    <select id="findUserInfo" resultType="chuyou.jiang.hystrix.model.User">
        select name, age from users limit 1;
    </select>

    <select id="findProductInfo" resultType="chuyou.jiang.hystrix.model.Product">
        select * from cdc_product limit 1;
    </select>
</mapper>
    